<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.groupout.users_and_groups.pojos.Device" table="device">
		<id name="deviceId" type="string" length="32">
			<column name="device_id" />
		</id>
		<property name="countryCode" length="4">
			<column name="country_code" />
		</property>
		<property name="phoneNumber" length="10">
			<column name="phone_number" />
		</property>
		<property name="registeredOn" type="string">
			<column name="registered_on" />
		</property>
		<many-to-one name="deviceCategory" column="device_category"
			unique="true" class="org.groupout.users_and_groups.pojos.DeviceCategory"
			not-null="true"></many-to-one>
		<many-to-one name="deviceType" column="device_type"
			unique="true" class="org.groupout.users_and_groups.pojos.DeviceType"
			not-null="true"></many-to-one>
	</class>
</hibernate-mapping>