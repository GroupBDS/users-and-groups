<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="org.groupout.users_and_groups.pojos.User" table="user">
		<id name="userId" type="string">
			<column name="user_id" />
		</id>
		<property name="password" type="string">
			<column name="password" />
		</property>
		<property name="active" type="boolean">
			<column name="active" />
		</property>
		<property name="registeredOn" type="string">
			<column name="registered_on" />
		</property>
		<property name="firstName" type="string">
			<column name="first_name" />
		</property>
		<property name="lastName" type="string">
			<column name="last_name" />
		</property>
		<property name="emailAddress" type="string">
			<column name="email_address" />
		</property>
		<many-to-one name="primaryDevice" column="primaryDevice" unique="true" class="org.groupout.users_and_groups.pojos.Device"
			not-null="true"></many-to-one>
	</class>
</hibernate-mapping>